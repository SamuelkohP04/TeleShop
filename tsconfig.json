{
  "compilerOptions": {
    /* Language and Environment */
    "baseUrl": "src/",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "allowImportingTsExtensions": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*", "../../packages/ui/src/*"],
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"]
    },

    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

    /* Plugins */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
